{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-utils/schema.json",
    "productName": "Sumi",
    "version": "0.2.0",
    "identifier": "com.sumivoice.app",
    "build": {
        "devUrl": "http://localhost:1420",
        "frontendDist": "./frontend/dist",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "macOSPrivateApi": true,
        "withGlobalTauri": false,
        "windows": [
            {
                "label": "main",
                "title": "Sumi",
                "url": "/main.html",
                "visible": false,
                "width": 960,
                "height": 720,
                "resizable": false,
                "center": true,
                "decorations": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true
            },
            {
                "label": "overlay",
                "title": "",
                "url": "/overlay.html",
                "width": 300,
                "height": 52,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "resizable": false,
                "skipTaskbar": true,
                "visible": false,
                "focus": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.icns",
            "icons/icon.png",
            "icons/icon.ico"
        ],
        "createUpdaterArtifacts": true
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYyNUVBMzBCMDJBQTE2Q0UKUldUT0Zxb0NDNk5lWWdGRGk5Rlhib2JDU0JTSXBTbjBKTy81emwveGxyZGEzKzlYdVcvQkUwbkIK",
            "endpoints": [
                "https://github.com/alan890104/sumi/releases/latest/download/latest.json"
            ]
        }
    }
}
